#!/bin/bash

image="sds/swot-reproject-test"
tag=${1:-latest}


# Look for old version of image and remove
#
old=$(docker images | grep "$image" | grep "$tag" | awk '{print $3}')
if [ ! -z "$old" ] && [ "$2" != "--no-delete" ]; then
    docker rmi "$old"
fi

# Build the image
#
docker build -t ${image}:${tag} -f test/Dockerfile .
